<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="10"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/addFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_weight="6">


        <ImageView
            android:id="@+id/PosterFragemnet"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/Movie_title_Fragment"
            app:srcCompat="@drawable/cinema" />

        <EditText
            android:id="@+id/Movie_title_Fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:ems="9"
            android:hint="Title"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/Movie_Actor_Fragment"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_alignStart="@+id/Movie_title_Fragment"
            android:layout_alignTop="@+id/PosterFragemnet"
            android:ems="20"
            android:hint="Actors"
            android:textSize="10sp"
            />

        <EditText
            android:id="@+id/Movie_length_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/Movie_title_Fragment"
            android:layout_below="@+id/Movie_title_Fragment"
            android:ems="15"
            android:hint="Length"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/Movie_desc_fragment"
            android:layout_width="wrap_content"
            android:layout_height="30dp"

            android:layout_alignStart="@+id/PosterFragemnet"
            android:layout_below="@+id/ratingBar"
            android:ems="30"
            android:hint="Description"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/Movie_Gen_Fragemnet"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignStart="@+id/Movie_length_fragment"
            android:layout_below="@+id/Movie_length_fragment"
            android:ems="14"
            android:hint="Genre"
            android:textSize="12sp" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/Movie_Gen_Fragemnet"
            android:layout_below="@+id/Movie_Gen_Fragemnet"
            android:numStars="4" />

        <Button
            android:id="@+id/addEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignWithParentIfMissing="false"
            android:layout_below="@+id/Movie_desc_fragment"
            android:text="add" />

        <Button
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addEntry"
            android:layout_centerHorizontal="true"
            android:text="update" />

        <Button
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/update"
            android:layout_centerHorizontal="true"
            android:text="delete" />



    </RelativeLayout>


</LinearLayout>